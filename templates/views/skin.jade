extends ../layouts/default

block content
	- var noImages = (skin.images.length == 0);
	if(!noImages)
		.row.images-container: .col
			each image in skin.images
				.image-container
					img(src= image)
			each image in skin.images
				.image-container
					img(src= image)
			each image in skin.images
				.image-container
					img(src= image)
			each image in skin.images
				.image-container
					img(src= image)
	.row.links-container(class=noImages ? "negative-margin-top" : ""): .col
		a#linkChatCode.waves-effect.waves-light.btn.red.darken-4(data-id= skin.skinid, data-type="item")
			i.mdi-communication-chat.left
			| Copy chat code
		a#linkFavorite.waves-effect.waves-light.btn.grey
			i.mdi-action-favorite-outline.left
			| Add to favorites
		a.waves-effect.waves-light.btn.grey(href= skin.wikiUrl)
			i.mdi-action-info-outline.left
			| Wiki
			
	.row
		.col.s12.m8.l9
			if(skin.description)
				h5 Description
				p= skin.description

			if(skin.description && skin.acquisition)
				.divider
			
			if(skin.acquisition)
				h5 Acquisition
				p= skin.acquisition
		.col.s12.m4.l3
			h5 Items using this skin
			ul.list-with-items
				each item in items
					a(href="/skin/#{item.skinid}")
						li
							.valign-wrapper.left-align
								img(src= item.icon)
								span.valign= item.name
								
block js
	script(src="/js/chatcode.js")