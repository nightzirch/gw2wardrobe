extends ../layouts/default

block content
	//- if !user
		.row.links-container.negative-margin-top: .col
			a#profile-save.waves-effect.waves-light.btn.red.darken-4(href="#")
				i.mdi-editor-mode-edit.left
				| Register
	
	+flash-message({
			title: "Hi, I am blue",
			detail: "And so are you because you're so far down on the leaderboard. This leaderboard is just something simple I made really quick, so dont worry about it too much. Rather, go ingame and farm some skin, you noob.",
			},
			"info")
	
	.row
		.col.s12
			table.striped
				thead
					tr
						th 
						th Username
						th Wardrobe Progression
				tbody
					- users.sort(function(a,b){if(a.wardrobe.length > b.wardrobe.length) {return -1;} if(a.wardrobe.length < b.wardrobe.length) {return 1;}return 0;});
					
					each profile, i in users
						tr
							td= i + 1
							td= profile.username
							if profile.wardrobe.length > 0
								td #{((profile.wardrobe.length / allSkins.length) * 100).toFixed(1)}%
							else
								td 0%
