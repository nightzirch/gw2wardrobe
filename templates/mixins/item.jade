mixin item(item)
	- var classes = new Array();
	if user
		- if(user.wardrobe.indexOf(item.skinid) > -1) {classes.push("owned")}
		- if(user.favorites.indexOf(item.skinid) > -1) {classes.push("favoritted")}
	
	.skin-item.tooltipped(data-skinid= item.skinid, class=classes, data-position="top", data-tooltip= item.name, data-delay="0")
		.waves-effect.waves-light.z-depth-1
			a(href='/skin/#{item.skinid}')
				.skin-item-owned
					i.mdi-action-done
					.skin-item-owned-background
				.skin-item-image-container
					img(src= item.icon)
				.skin-item-favoritted
					i.mdi-action-favorite
					.skin-item-favoritted-background
		.skin-item-toolbar
			a.linkFavorite(href="#", class=(classes.indexOf("favoritted") > -1) ? "favoritted" : "", data-skinid= item.skinid, data-skinname= item.name)
				.favoriteFalse
					i.mdi-action-favorite-outline
				.favoriteTrue
					i.mdi-action-favorite
			a.linkChatCode(href="#", data-id= item.skinid, data-type="item")
				i.mdi-communication-chat
			a.linkAddToWardrobe(href="#", class=(classes.indexOf("owned") > -1) ? "owned" : "", data-skinid= item.skinid, data-skinname= item.name)
				.ownedFalse
					i.i.mdi-content-add-circle-outline
				.ownedTrue
					i.i.mdi-content-remove-circle-outline